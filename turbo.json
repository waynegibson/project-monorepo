{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "^generate"],
      "env": ["DATABASE_URL"],
      "outputs": ["dist/**", ".output/**", ".cdk.out/**"]
    },
    "dev": {
      "dependsOn": ["^generate"],
      "env": ["DATABASE_URL"],
      "cache": false
    },
    "generate": {
      "cache": false
    },
    "migrate:dev": {},
    "seed": {
      "dependsOn": ["^migrate:dev"]
    }
  }
}
